<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nicosiput.com.projectfinaliak3.Fragment.fragmentAbout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding15"
        android:textSize="@dimen/sizeTxt18"
        android:text="Version 0.1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/support"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/About"
                android:text="PT. Nico Shop"/>

            <TextView
                style="@style/AboutAlamat"
                android:text="Jalan Mh. Thamrin No 15 Gedung Pajajaran Lt 5"/>

            <TextView
                style="@style/AboutAlamat"
                android:text="Contact Person :"/>

            <TextView
                style="@style/AboutAlamat"
                android:text="Telp : (021) - 7712321"/>

            <TextView
                style="@style/AboutAlamat"
                android:text="Email : information@nicoshop.com"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/copyRight"/>
    </LinearLayout>

</LinearLayout>
